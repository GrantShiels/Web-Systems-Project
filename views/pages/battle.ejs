<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('segments/header.ejs') %>

</head>

<body>

    <!-- Top Nav Bar -->
<nav class="navbar navbar-expand-md navbar-dark bg-dark sticky-top">
    <div class="container-fluid">
        <a class="navbar-brand" href="/"><img class="nav-logo" src="../../img/pokeball-logo.png"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/pokedex">Pokedex</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/battle">Battle</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/user/login">Login</a>
                </li>
            </ul>
        </div>
    </div>
</nav>


<div class="container">
    <div class="row">

        <!--Client Pokemon party-->
      <div class="col-sm">
        <h5>Your Party</h5>
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="https://pokeres.bastionbot.org/images/pokemon/12.png" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title center">Butterfree</h5>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">Flying</li>
            </ul>

          </div>

          
          
      </div>

      <!-- Chat Collumn-->
      <div class="col-sm">
        <div class="rps-wrapper">
            <ul id="events">
            </ul>
        
            <div class="button-wrapper">
        
                <form id="chat-form">
                    <input id="chat">
                     <button id="Send">Send</button>
                </form>
        
                <button id="One">One</button>
                <button id="Two">Two</button>
                <button id="Three">Three</button>
            </div>
        </div>
        <script src="/socket.io/socket.io.js"></script>
        <script type="text/javascript" src="../scripts/client.js"></script>        
      </div>

      <!--Other player Pokemon party-->
      <div class="col-sm">
        <h5>Enemy Party</h5>

        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="https://pokeres.bastionbot.org/images/pokemon/26.png" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title center">Raichu</h5>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">Electric</li>
            </ul>

          </div>

         
      </div>
    </div>
  </div>



<!-- Footer -->
<%- include('segments/footer.ejs') %>

</body>